# This file is the application Kconfig entry point. All application Kconfig
# options can be defined here or included via other application Kconfig files.
# You can browse these options using the west targets menuconfig (terminal) or
# guiconfig (GUI).

menu "Zephyr"
source "Kconfig.zephyr"
endmenu

module = APP
module-str = APP
source "subsys/logging/Kconfig.template.log_config"

###
# Application Configs
###

config SAMPLING_INTERVAL
	int "Sampling Interval in Milliseconds"
	default 1000
	depends on SENSOR
	
config TRANSMISSION_INTERVAL
	int "Transmission Interval in Milliseconds. Mininum value of 1 guarantees correct system operation"
	default 1

config BUFFER_WORDS
	int "Number of 32-bit words the buffers can hold"
	default 45000 # Using 180 out of 256kB of memory
	depends on RING_BUFFER


###
# Transmission Configs
###

config SEND_UART
	bool "Print data in buffer in console via UART"
	default UART_CONSOLE


# LoRaWAN configs

config SEND_LORAWAN
	bool "Send data to LoRaWAN"
	depends on LORAWAN

config LORAWAN_DR
	int "Fixed data rate to be used"
	depends on SEND_LORAWAN && !LORAWAN_ADR
	default 0

# LORA P2P
config SEND_LORA_P2P
	bool "LoRa Peer-to-Peer sending"
	depends on !SEND_LORAWAN

config RECEIVE_LORA_P2P
	bool "LoRa Peer-to-Peer receiving"
	depends on !SEND_LORAWAN
	
config LORA_P2P_SF
	int "LoRa Peer-to-Peer Spreading Factor"
	default 7
	depends on SEND_LORA_P2P || RECEIVE_LORA_P2P

config LORA_P2P_CR
	int "LoRa Peer-to-Peer Coding Rate"
	default 5
	depends on SEND_LORA_P2P || RECEIVE_LORA_P2P

config LORA_P2P_BW
	int "LoRa Peer-to-Peer Bandwidth"
	default 125
	depends on SEND_LORA_P2P || RECEIVE_LORA_P2P